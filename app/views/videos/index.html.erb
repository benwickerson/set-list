<h1>Videos</h1>

<div>
  <%= form_for @video do |f| %>
  <%= f.text_field :url, class: "form-control addurl", style: "margin-bottom: 10px;", placeholder: "Enter YouTube URL here..." %>
  <%= f.submit 'Add Video', class: "btn btn-primary form-control" %>
  <% end %>
</div>  
<hr>


<% @videos.each do |video| %>
<div id="video_<%= video.id %>" class="video-container">
  <%= embed_yt(video.url) %>
</div>
  <%= link_to 'Remove', video_path(id: video.id), method: :delete, class: "btn btn-danger" %>
<hr>
<% end %>
