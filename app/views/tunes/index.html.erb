<h1>Listing tunes</h1>

<%= link_to 'New Tune', new_tune_path, class: "btn btn-primary", role: "button" %>

<table class="table">
  <thead>
    <tr>
      <th>Tune</th>
      <th>Vocal</th>
      <th>Key</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @tunes.each do |tune| %>
      <tr>
        <td><%= link_to "#{tune.tune}", tune %></td>
        <td><%= tune.vocal %></td>
        <td><%= tune.key %></td>
        <td><%= link_to 'Edit', edit_tune_path(tune) %></td>
        <td><%= link_to 'Destroy', tune, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

