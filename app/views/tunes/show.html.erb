<p id="notice"><%= notice %></p>

<h1>
  <strong><%= @tune.tune %></strong>
</h1>

<%= link_to 'Edit', edit_tune_path(@tune) %> |
<%= link_to 'Back', tunes_path %>


<% if @tune.vocal %>
<p>
  <strong>Vocal</strong>
</p>
<% end %>
<p>
  <strong>Key:</strong>
  <%= @tune.key %>
</p>

<p><strong>Notes</strong></p>

<% if @tune.notes %>
<div class="container">
  <% @tune.notes.each do |note| %>
    <blockquote class="note">
    <p><strong><%= note.title %></strong>
    <em><small><%= note.created_at.to_formatted_s(:long) %></small></em></p>
    <p><%= note.text %></p>
    </blockquote>
  <% end %>
</div>
<% end %>


<strong style="font-size: 1.5em;">Add Note</strong>
<div class="row">
  <div class="col-md-4">
    <%= form_for @new_note, url: notes_path do |f| %>
      <%= f.hidden_field :link_id, value: @tune.id %>
      <%= f.hidden_field :link_type, value: "Tune" %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :title, type:"text", class: "form-control"  %>
    </div>

    <div class="form-group">
      <%= f.label :note %><br>
      <%= f.text_field :text, type: "text", class: "form-control"  %>
    </div>

    <div class="actions">
      <%= f.submit "Add", class:"form-control btn btn-primary" %>
    </div>

    <% end %> 
  </div>
</div>
